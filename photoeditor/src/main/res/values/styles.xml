<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditText">
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ResizeHandle">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="ResizeHandle.Corner" parent="ResizeHandle">
        <item name="android:src">@drawable/handle_corner</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ResizeHandle.Side" parent="ResizeHandle">
        <item name="android:src">@drawable/handle_side</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="RotateHandle">
        <item name="android:src">@drawable/zl_rotateimage</item>
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ControlHandle">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:elevation">1dp</item>
    </style>

</resources>
