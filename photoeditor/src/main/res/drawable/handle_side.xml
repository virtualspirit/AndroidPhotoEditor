<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Layer untuk Border/Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4D000000" /> <!-- Warna abu-abu transparan -->
            <corners android:radius="12dp" /> <!-- Sudut membulat -->
            <size
                android:width="24dp"
                android:height="12dp" />
        </shape>
    </item>

    <!-- Layer untuk Bentuk Putih utama -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="11dp" />
            <stroke
                android:width="1dp"
                android:color="#B0B0B0" /> <!-- Border abu-abu terang -->
            <size
                android:width="4dp"
                android:height="1dp" />
        </shape>
    </item>

</layer-list>